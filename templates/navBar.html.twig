									</div>
								</div>
							</li>

							<div class="mt-2 archivesMenu">
								<a class="text-light ml-2" href="{{ path('archives') }}">Archives</a>
							</div>

							<div class="mt-2 md-5">
								<a class="text-light ml-2" href="{{ path('show_content', {'slug': 'nous-soutenir'}) }}">{% trans into language %}Nous soutenir{% endtrans %}</a>
							</div>
