									<button class="btn bg01 dropdown-toggle menuItem" type="button" id="dropdownMenuButton" data-toggle="dropdown" aria-haspopup="true" aria-expanded="false">Sens Interdits</button>
									<div class="dropdown-menu bg01" aria-labelledby="dropdownMenuButton">
										<a class="dropdown-item" href="{{ path('show_content', {'slug': 'le-festival'}) }}">{% trans into language %}Le Festival{% endtrans %}</a>
