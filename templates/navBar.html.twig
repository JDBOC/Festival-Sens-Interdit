										<a class="dropdown-item" href="{{ path('show_content', {'slug': 'le-chapiteau'}) }}">Le chapiteau</a>
										<a class="dropdown-item" href="{{ path('show_content', {'slug': 'lieux-et-acces'}) }}">{% trans into language %}Lieux et accès{% endtrans %}</a>
