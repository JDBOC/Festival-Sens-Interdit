{% set session = app.session.get('session') %}
{% if session['language'] is not defined %}
	{% set language = "fr" %}
{% else %}
	{% set language = session['language'] %}
{% endif %}

<div class="navBg">
	<div class="container-fluid">

		<div class="row pb-0">

				<a href="{{ path('translate', {value: 'fr', route: app.request.attributes.get('_controller'), parameters: app.request.attributes.get('_route_params')}) }}">
					<button name="language" class="btn btn-default">
						<img class="m-0" src="/drapFr.jpg" width="30" style="border:solid; border-width: thin;"/>
					</button>
				</a>
				<a href="{{ path('translate', {value: 'en_EN', route: app.request.attributes.get('_controller'), parameters: app.request.attributes.get('_route_params')})}}">
					<button name="language" value="en_EN" class="btn btn-default">
						<img src="/drapEn.jpg" width="30" style="border:solid; border-width: thin;" />
					</button>
				</a>
			<div class="btn-group dropleft offset-1 offset-md-4 offset-xl-8">
 				<button type="button" class="btn btn-transparent pr-0" data-toggle="dropdown" aria-haspopup="true" aria-expanded="false">
				<i class="fas fa-search " style="color: white; font-size: 25px;" ></i>
  				</button>
					<div class="dropdown-menu search pt-0"  aria-labelledby="dropdownMenuButton">
						<form action="{{ path('search')}}" method="GET">
							<input type="TEXT" name="search" placeholder="Search">
						</form>
					</div>
					<div class="col-1 offset-1">
						<a href="#" data-toggle="modal" data-target="#ContactModal"><i class="far fa-envelope fa-2x" style="color: white"></i></a>
					</div>
					<div class="col-1 pl-0 offset-2">
						<a href="https://www.facebook.com/sens.interdits/"><i class="fab fa-facebook fa-2x" style="color: white;"></i></a>
					</div>
					<div class="col-1 offset-1">
						<a href="https://twitter.com/sens_interdits"><i class="fab fa-twitter fa-2x" style="color: white"></i></a>
					</div>
					<div class="col-1 offset-1">
						<a href="https://www.youtube.com/channel/UCIoz5kqDlIfEuRR4gxXDfFw"><i class="fab fa-youtube fa-2x" style="color: white"></i></a>
					</div>
				</div>
			</div>
		</div>

