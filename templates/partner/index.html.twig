{% extends 'adminBase.html.twig' %}

{% block title %}Partner index{% endblock %}

{% block body %}
    <h1>Liste des Partenaires</h1>

    <table class="table">
        <thead>
            <tr>
                <th>TYPE</th>
                <th>NOM</th>
                <th>LOGO</th>
                <th>LIEN</th>
                <th>ACTIONS</th>
            </tr>
        </thead>
        <tbody>
            <tr>
                <td>{{ partner.typeName }}</td>
                {% for partner in partners %}
                <td>{{ partner.name }}</td>
                <!-- TODO : Add logo with SI_FILE -->
                <td>LOGO</td>
                <td>{{ partner.link }}</td>

                <td>
                    <a href="{{ path('partner_edit', {'id': partner.id}) }}" class="btn btn-warning btn-sm">modifier</a>
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="5">aucun Partenaire trouv√©</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

    <a href="{{ path('partner_new') }}" class="btn btn-info btn-sm m-1">Nouveau Partenaire</a>
{% endblock %}
