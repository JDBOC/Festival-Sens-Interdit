{% extends 'adminBase.html.twig' %}

{% block title %}Partner index{% endblock %}

{% block body %}
    <h1>Partner index</h1>

    <table class="table">
        <thead>
            <tr>
                <th>PartnerName</th>
                <th>PartnerType</th>
                <th>Link</th>
                <th>actions</th>
            </tr>
        </thead>
        <tbody>
        {% for partner in partners %}
            <tr>
                <td>{{ partner.partnerName }}</td>
                <td>{{ partner.partnerTypeName }}</td>
                <td>{{ partner.link }}</td>

                <td>
                    <a href="{{ path('partner_show', {'id': partner.id}) }}">show</a>
                    <a href="{{ path('partner_edit', {'id': partner.id}) }}">edit</a>
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="5">no records found</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

    <a href="{{ path('partner_new') }}">Create new</a>
{% endblock %}
