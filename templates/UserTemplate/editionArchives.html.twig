{% extends 'base.html.twig' %}

{% block body %}

    <div class="card bg-dark text-white border-0 ">
        
                <img class="img-fluid" src="/upload/file/blackCover.jpg" class="imgTop img-fluid" alt="show photo" class="card-img" alt="...">
     <div class="card-img-overlay text-center">
<h1 class="card-title pt-4 mt-4 d-none d-md-block">Edition {{edition.name}}</h1>
     </div>
    </div>
<div class="container">
    <div class="row">
        {% for content in contents %}
            <div class="col-xl-3 col-md-5 col-sm-1" style="margin: 10px;">
                <div class="card" style="width: 18rem;">
                    <a href="{{ path('show_content', {'slug': content.slug}) }}">
                        <img class="card-img-top" src="/upload/file/{{ content.thumbnail.mediaFileName }}" alt="Card image cap">
                    </a>
                    <div class="card-body">
                        <h5 style="color: black; text-align: center;">{{ content.titleFr }}</h5>
                    </div>
                </div>
            </div>
        {% endfor %}
    </div>
</div>

{% endblock %}
