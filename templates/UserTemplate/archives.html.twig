{% extends 'base.html.twig' %}

{% block body %}

    <div class="container">
        <div class="row">
            <h3>Editions archiv√©es</h3>
        </div>
        <div class="row">
            {% for edition in editions %}
                <div class="col-xl-3 col-md-5 col-sm-1" style="margin: 10px;">
                    <div class="card" style="width: 18rem;">
                        <a href="{{ path('list_content_edition_archive', {'id': edition.id}) }}">
                            <img class="card-img-top" src="/upload/file/{{ edition.editionPicture.mediaFileName }}" alt="Card image edition">
                        </a>
                        <div class="card-body">
                            <h5 style="color: black; text-align: center;">{{ edition.name }}</h5>
                        </div>
                    </div>
                </div>
            {% endfor %}
        </div>
    </div>

{% endblock %}
