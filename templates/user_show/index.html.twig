{% extends 'base.html.twig' %}

{% block title %}{% endblock %}

{% block body %}

<!-- Kind of header after the navbar : Main show's photo included title and coutry -->
<div class="container-fluid p-0" id="topImg">
    <div class="card-img" id="topImg">
        <!-- Main show's photo -->
        <img class="card-img" id="topImg" src="https://unsplash.it/1500/250/?random" alt="show photo"/>
