{% extends 'base.html.twig' %}

{% block stylesheets %}
            {{ encore_entry_link_tags('app') }}
{% endblock %}
{% block body %}

<div class="row">
	{%for date in period %}
		<div class="col-4 col-md-1">
		<a href="{{path('index_by_date',{'sessionDate': date|date('d-m-Y')})}}">	{{date|date('D d')}}</a>
		</div>
	{% endfor %}
</div>

	{% for category, messages in app.flashes %}
		{% for message in messages %}
			<div class="alert alert-{{ category }}">
				{{ message }}
			</div>
		{% endfor %}
	{% endfor %}
	    <div class="container">
	    	<h1>{% trans into language %} Bonjour{% endtrans %}</h1>
	    	<div class="row">
	    {% for content in contents %}
	    	<div class=" col-12 col-md-3">
		    	<div class="card-spectacle">
		    		<div>
		    			<a href="/show/{{content.id}}"><img src="upload/file/{{content.thumbnail.mediaFileName}}" class="card-img-top img-border" alt="..."></a>

					</div>
				  	<div class="card-body pt-0">
					  	<h3 class="mb-0 text-muted">{{	content.titleFr }}</h3>
				    </div>
				</div>
			</div>
		{% endfor %}
			</div>
		</div>
{% endblock %}
