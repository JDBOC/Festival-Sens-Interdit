{% extends 'adminBase.html.twig' %}

{% block title %}News{% endblock %}

{% block body %}
    <table class="table">
        <tbody>
            <tr>
                <th>Titre</th>
                <td>{{ content.titleFr }}</td>
            </tr>
            <tr>
                <th>Contenu</th>
                <td><p>{{ content.contentFr}}</p></td>
            </tr>
            <tr>
                <th>Image</th>
                {% for picture in content.pictures %}
                <td><img class="w-25" src="/upload/file/{{ picture.mediaFileName }}">
                </td>
                {% endfor %}
            </tr>
        </tbody>
    </table>

    <a href="{{ path('news_admin') }}">retour liste</a>

    <a href="{{ path('news_edit', {'id': content.id}) }}">edit</a>

    {{ include('/admin/news/_delete_form.html.twig') }}
{% endblock %}
