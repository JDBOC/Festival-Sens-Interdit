{% extends 'adminBase.html.twig' %}

{% block title %}Edition{% endblock %}

{% block body %}
    <h1>Editions</h1>

    <table class="table">
        <tbody>
            <tr>
                <th>Id</th>
                <td>{{ edition.id }}</td>
            </tr>
            <tr>
