{% extends 'adminBase.html.twig' %}

{% block title %}représentations{% endblock %}

{% block body %}
    <h1>{{content.titleFr}}</h1>
    <a href="{{ path('show_edit',{'id':content.id}) }}">Retourner vers le spectacle</a>

    <table class="table">
        <thead>
            <tr>
                <th>Id</th>
                <th>SessionDate</th>
                <th>Location</th>
                <th>actions</th>
            </tr>
        </thead>
        <tbody>
        {% for session in sessions %}
            <tr>
                <td>{{ session.id }}</td>
                <td>{{ session.sessionDate ? session.sessionDate|date('d-m-Y à H:i') : '' }}</td>
                <td>{{ session.location }}</td>
                <td>
                    <a href="{{ path('session_show', {'id': session.id}) }}">show</a>
                    <a href="{{ path('session_edit', {'id': session.id}) }}">edit</a>
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="4">no records found</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

{% endblock %}
