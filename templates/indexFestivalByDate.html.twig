{% extends 'base.html.twig' %}

{% block stylesheets %}
            {{ encore_entry_link_tags('app') }}
{% endblock %}
{% block body %}
	{% for category, messages in app.flashes %}
		{% for message in messages %}
			<div class="alert alert-{{ category }}">
				{{ message }}
			</div>
		{% endfor %}
	{% endfor %}



        <div class="container">
          <div class="row">
            {%for date in period %}
              <div class="col-4 col-md-1 px-1 pb-1">
              	<a class="txtplanning" href="{{path('index_by_date',{'sessionDate': date|date('d-m-Y')})}}"> 
                <button class="text-dark planning {% if date|date('d-m-Y') == sessionDate|date('d-m-Y') %} activeDate
                    {% endif %}">

                  {{date|date('j/n')}}
                </button></a>
              </div>
            {% endfor %}
          </div>
          <div class="boutonHorsScene">
            <button type="button" class="btn btn-outline-danger btn-block"><a class="horsSceneLien" href="{{path('index_hors_scene')}}">Hors Scène</a></button>
          </div>
        </div>

        <br>
        <div class="container">
	    	<div class="row">
	    {% for session in sessions %}
	    	<div class=" col-12 col-md-3">
		    	<div class="card-spectacle">
		    		<div>
		    			<a href="/show/{{session.content.id}}"><img src="/upload/file/{{session.content.thumbnail.mediaFileName}}" class="card-img-top img-border" alt="..."></a>
						<p class="textDate">{{ session.content.countryFr }}</p>
						{# <p class="textLieu">{{ session.content.countryFr }}</p> #}
					</div>
				  	<div class="card-body pt-0">
					  	<h3 class="mb-0 text-muted">{{ session.content.titleFr }}</h3>
					  	<p class="mb-0 fontHome"><b>{{ session.content.director }}</b></p>
					  	<p class="mb-0 fontHome"><b>{{ session.location }}</b></p>
					    <p class="mb-0 fontHome">Début {{ session.sessionDate|date("H:i") }} Durée {{ session.content.duree}}</p>
				    </div>
				</div>
			</div>
		{% endfor %}
			</div>
		</div>
{% endblock %}
